{
  "name": "md-aggregator",
  "version": "1.0.0",
  "description": "A command-line tool for aggregating Markdown file contents. It can recursively search for Markdown files in directories, process them according to configuration options, and merge all file contents into a single output file.",
  "main": "dist/js/index.cjs.js",
  "module": "dist/js/index.esm.js",
  "bin": {
    "md-aggregator": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "README.en.md"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "test": "jest"
  },
  "keywords": [
    "markdown",
    "aggregator",
    "cli"
  ],
  "author": "wuhu750",
  "license": "ISC",
  "packageManager": "pnpm@10.6.3",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "4.8"
  },
  "devDependencies": {
    "@types/commander": "2.12.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "rollup": "^4.50.1",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wuhu750/md-aggregator.git"
  },
  "bugs": {
    "url": "https://github.com/wuhu750/md-aggregator/issues"
  },
  "homepage": "https://github.com/wuhu750/md-aggregator#readme"
}